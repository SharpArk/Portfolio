---
import Layout from "../layouts/Layout.astro";
import { FaLongArrowAltUp, FaLongArrowAltLeft } from "react-icons/fa";
import {
  SiAstro,
  SiNestjs,
  SiAdobeillustrator,
  SiAdobephotoshop,
  SiFigma,
} from "react-icons/si";
import { RiNextjsFill, RiTailwindCssFill } from "react-icons/ri";
import { TbFileTypeSql } from "react-icons/tb";
import Bg from "../components/Bg.astro";
---

<Layout
  title="Home - Jeisson Benitez"
  description="I'm Jeisson Benitez, a full stack web developer and graphic designer from Medellín with experience in Astro, Next.js, Tailwind, NestJS, SQL, Illustrator, Photoshop, and Figma. Explore my projects, skills, and professional journey."
>
  <Bg />
  <main>
    <section
      class="flex flex-col sm:flex-row justify-center items-center w-full gap-20 xl:gap-40 py-4 sm:py-32"
    >
      <div
        class="flex flex-col justify-center items-center w-2/3 xl:w-1/4 h-full relative"
        id="Jeisson"
      >
        <img
          class="w-2/3 p-6 xl:p-0 sm:w-auto sm:h-[calc(2/3*100vh)] xl:h-full object-cover"
          src="/Jeisson.png"
        />
        <p
          class="absolute -bottom-10 xl:bottom-2 left-1/2 -translate-x-1/2 text-xl xl:text-3xl bg-[#77777770] backdrop-blur p-4 rounded-full"
        >
          Jeisson Benitez
        </p>
        <div
          class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-full h-2/3 border-8 border-white -z-10 rounded-t-2xl shadow-[0_0_36.1px_green]"
        >
        </div>
      </div>
      <div
        class="w-fit p-5 h-fit flex flex-row sm:flex-col justify-center items-center gap-4 rounded-2xl bg-[#8000ff25] backdrop-blur-[15px] py-4"
        id="Projects"
      >
        <h3 class="hidden sm:block text-2xl sm:text-4xl" id="ProjectsTitle">
          PROYECTS
        </h3>
        <article
          class="flex items-center justify-center flex-col gap-2 bg-[#2B2B2B86] p-8 rounded-2xl w-5/6"
          id="Projects1"
        >
          <a
            href="FullStackProyects"
            class="xl:text-5xl text-2xl text-green border-b-4 border-green"
          >
            FullStack Web Development
          </a>
          <p class="text-3xl text-center text-green">
            <FaLongArrowAltUp />
          </p>
        </article>
        <article
          class="w-5/6 h-[calc(1/3*100vh)] bg-[url('/Jolyne.png')] bg-cover rounded-2xl relative"
          id="Projects2"
        >
          <div
            class="absolute w-full h-full bg-gradient-to-t to-black from-[#00000000] rounded-2xl p-4"
          >
            <a
              href="GraphicDesignProjects"
              class="text-green xl:text-5xl text-2xl border-b-4 border-green w-fit flex justify-center items-center gap-2"
            >
              Graphic Designer <span class="text-3xl"
                ><FaLongArrowAltLeft /></span
              >
            </a>
          </div>
        </article>
      </div>
    </section>
    <div
      class="w-full h-24 md:h-32 flex justify-center items-center bg-purple backdrop-blur-[15px]"
    >
      <p class="text-3xl sm:text-4xl md:text-6xl">Who is "Jeisson Benitez"?</p>
    </div>
    <section>
      <div
        class="flex flex-col xl:flex-row justify-center items-center w-full h-[150vh] xl:h-[calc(100vh-8rem)] p-12 overflow-y-hidden"
      >
        <article
          class="h-full w-full flex flex-col justify-center items-center p-16"
        >
          <p
            class="xl:text-2xl w-3/4 p-6 bg-[#212121] rounded-r-2xl relative"
            id="AboutMe1"
          >
            <span class="text-purple">
              {"<p>"}
            </span>
            <br />
            <span>
              3 years ago I realized that my passion is making web pages,
              nowadays I’m promoting my services to all the world - Jeisson
              Benitez
            </span>
            <br />
            <span class="text-purple">
              {"<p/>"}
            </span>
            <span
              class="w-4 h-full bg-green -left-4 top-0 rounded-l-2xl absolute"
            ></span>
          </p>
          <p class="text-3xl my-5" id="HardSkillsTitle">Hard Skills:</p>
          <div
            class="flex flex-col gap-5 justify-center items-center"
            id="HardSkills"
          >
            <div class="flex gap-8">
              <div class="group relative flex flex-col items-center">
                <span class="text-[50px] xl:text-[100px] cursor-pointer">
                  <SiAstro />
                </span>
                <span
                  class="absolute bottom-[-2.5rem] left-1/2 -translate-x-1/2 bg-black text-white text-sm px-3 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-10"
                >
                  Astro: Modern framework for building fast websites.
                </span>
              </div>
              <div class="group relative flex flex-col items-center">
                <span class="text-[50px] xl:text-[100px] cursor-pointer">
                  <RiNextjsFill />
                </span>
                <span
                  class="absolute bottom-[-2.5rem] left-1/2 -translate-x-1/2 bg-black text-white text-sm px-3 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-10"
                >
                  Next.js: React framework for scalable web applications.
                </span>
              </div>
              <div class="group relative flex flex-col items-center">
                <span class="text-[50px] xl:text-[100px] cursor-pointer">
                  <RiTailwindCssFill />
                </span>
                <span
                  class="absolute bottom-[-2.5rem] left-1/2 -translate-x-1/2 bg-black text-white text-sm px-3 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-10"
                >
                  Tailwind CSS: Utility-first CSS for fast and responsive
                  styling.
                </span>
              </div>
              <div class="group relative flex flex-col items-center">
                <span class="text-[50px] xl:text-[100px] cursor-pointer">
                  <SiNestjs />
                </span>
                <span
                  class="absolute bottom-[-2.5rem] left-1/2 -translate-x-1/2 bg-black text-white text-sm px-3 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-10"
                >
                  NestJS: Efficient backend framework with Node.js.
                </span>
              </div>
              <div class="group relative flex flex-col items-center">
                <span class="text-[50px] xl:text-[100px] cursor-pointer">
                  <TbFileTypeSql />
                </span>
                <span
                  class="absolute bottom-[-2.5rem] left-1/2 -translate-x-1/2 bg-black text-white text-sm px-3 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-10"
                >
                  SQL: Language for database management.
                </span>
              </div>
            </div>
            <div class="flex gap-8">
              <div class="group relative flex flex-col items-center">
                <span class="text-[50px] xl:text-[100px] cursor-pointer">
                  <SiAdobeillustrator />
                </span>
                <span
                  class="absolute bottom-[-2.5rem] left-1/2 -translate-x-1/2 bg-black text-white text-sm px-3 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-10"
                >
                  Adobe Illustrator: Professional vector graphic design.
                </span>
              </div>
              <div class="group relative flex flex-col items-center">
                <span class="text-[50px] xl:text-[100px] cursor-pointer">
                  <SiAdobephotoshop />
                </span>
                <span
                  class="absolute bottom-[-2.5rem] left-1/2 -translate-x-1/2 bg-black text-white text-sm px-3 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-10"
                >
                  Adobe Photoshop: Image editing and retouching.
                </span>
              </div>
              <div class="group relative flex flex-col items-center">
                <span class="text-[50px] xl:text-[100px] cursor-pointer">
                  <SiFigma />
                </span>
                <span
                  class="absolute bottom-[-2.5rem] left-1/2 -translate-x-1/2 bg-black text-white text-sm px-3 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-10"
                >
                  Figma: Collaborative tool for interface design.
                </span>
              </div>
            </div>
          </div>
        </article>
        <article
          class="h-full w-full flex flex-col justify-center items-center p-16 border-y-16 2xl:text-xl border-purple"
          id="AboutMe2"
        >
          <p>
            My name is <span class="text-green">Jeisson Benitez Ortega</span>,
            I’ve lived in Medellin Antioquia all my life, when I was younger, I
            studied in <span class="text-green"
              >Maestro Fernando Botero School</span
            >, in this school I got a certificate with the <span
              class="text-green">SENA</span
            > in <span class="text-green"
              >Technician in design and integration of multimedia content</span
            >, nowadays I’m studying <span class="text-green"
              >software engineering</span
            >
            <span class="text-green">in the Pascual Bravo University</span> institution
            I’m gonna show my soft skills:
          </p>
          <ul class="list-disc my-5">
            <li>Teamwork: I work well in teams and value collaboration.</li>
            <li>
              Adaptability: I can adjust to new situations and challenges.
            </li>
            <li>
              Problem-solving: I enjoy finding solutions to complex issues.
            </li>
            <li>
              Communication: I can clearly express ideas and listen to others.
            </li>
          </ul>
          <p>
            The work I deliver is of best quality and you won’t regret having
            sought me out. In fact, you’ll regret no seeking me out when I was
            barely a year old
          </p>
        </article>
      </div>
    </section>
    <div
      class="w-full h-24 md:h-32 flex justify-center items-center bg-purple backdrop-blur-[15px]"
    >
      <p class="text-6xl">Certifications</p>
    </div>
    <section
      class="flex w-full h-screen justify-center items-center p-12 gap-6 relative overflow-hidden"
    >
      <div
        class="absolute w-3xl aspect-square rounded-full bg-green blur-[250px] -right-1/3 -top-1/3"
        id="sphere1"
      >
      </div>
      <div
        class="absolute w-3xl aspect-square rounded-full bg-purple blur-[250px] -left-1/3 -bottom-1/3"
        id="sphere2"
      >
      </div>
      <div
        class="flex justify-center items-center gap-12 h-5/6"
        id="certificate"
      >
        <img src="/certificate.jpg" class="h-2/3 xl:h-full z-10" alt="" />
        <p
          class="text-xl sm:text-2xl w-1/2 p-6 bg-[#212121] rounded-r-2xl relative"
        >
          <span class="text-purple">
            {"<p>"}
          </span>
          <br />
          <span>
            certificated with the SENA in digital content integration
          </span>
          <br />
          <span class="text-purple">
            {"<p/>"}
          </span>
          <span class="w-4 h-full bg-green -left-4 top-0 rounded-l-2xl absolute"
          ></span>
        </p>
      </div>
      <img
        src="/jbicon.svg"
        class="aspect-square w-xl hidden xl:block opacity-10"
        id="icon"
      />
    </section>
  </main>
</Layout>

<style>
  body {
    overflow-x: hidden;
  }
</style>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.from("#Jeisson", {
    duration: 1,
    x: -200,
    opacity: 0,
    ease: "power2.out",
  });

  gsap.from("#ProjectsTitle", {
    duration: 1,
    y: 50,
    opacity: 0,
    ease: "power2.out",
    delay: 0.25,
  });

  gsap.from("#Projects", {
    duration: 1,
    y: 200,
    opacity: 0,
    ease: "power2.out",
    delay: 0.5,
  });

  gsap.from("#Projects1", {
    duration: 1,
    y: 200,
    opacity: 0,
    ease: "power2.out",
    delay: 0.5,
  });

  gsap.from("#Projects2", {
    duration: 1,
    y: 200,
    opacity: 0,
    ease: "power2.out",
    delay: 0.5,
  });

  // ScrollTrigger animations

  gsap.from("#AboutMe1", {
    scrollTrigger: {
      trigger: "#AboutMe1",
    },
    duration: 1,
    x: -200,
    opacity: 0,
    ease: "power2.out",
  });

  gsap.from("#AboutMe2", {
    scrollTrigger: {
      trigger: "#AboutMe2",
    },
    duration: 1,
    x: 200,
    opacity: 0,
    ease: "power2.out",
    delay: 0.25,
  });

  gsap.from("#HardSkillsTitle", {
    scrollTrigger: {
      trigger: "#HardSkillsTitle",
    },
    duration: 1,
    y: 50,
    opacity: 0,
    ease: "power2.out",
    delay: 0.5,
  });

  gsap.from("#HardSkills .text-\\[100px\\]", {
    scrollTrigger: {
      trigger: "#HardSkills",
    },
    duration: 1,
    y: 200,
    opacity: 0,
    ease: "power2.out",
    delay: 0.75,
    stagger: 0.05,
  });

  gsap.from("#sphere1", {
    scrollTrigger: {
      trigger: "#sphere2",
    },
    duration: 1,
    x: 200,
    y: -200,
    opacity: 0,
    ease: "power2.out",
    delay: 0.25,
  });

  gsap.from("#sphere2", {
    scrollTrigger: {
      trigger: "#sphere2",
    },
    duration: 1,
    x: -200,
    y: 200,
    opacity: 0,
    ease: "power2.out",
    delay: 0.25,
  });

  gsap.from("#icon", {
    scrollTrigger: {
      trigger: "#icon",
    },
    duration: 1,
    y: 200,
    opacity: 0,
    ease: "power2.out",
    delay: 0.5,
  });

  gsap.from("#certificate", {
    scrollTrigger: {
      trigger: "#certificate",
    },
    duration: 1,
    x: -200,
    opacity: 0,
    ease: "power2.out",
    delay: 0.75,
  });
</script>
